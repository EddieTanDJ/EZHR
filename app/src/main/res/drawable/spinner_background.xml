<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorBackground"></solid>

                    <corners android:radius="5dp" />

                    <padding android:bottom="13dp" android:left="10dp" android:right="10dp" android:top="13dp" />
                    <stroke android:width="1dp" android:color="#8D8E8F" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/arrow_down" />
            </item>
        </layer-list>
    </item>
</selector>