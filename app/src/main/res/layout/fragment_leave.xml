<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            app:srcCompat="@drawable/pixeltrue_time_management_1" />

        <Button
            android:id="@+id/buttonLeaveApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#044cd0"
            android:minHeight="64dp"
            android:text="Apply Leave" />

        <Button
            android:id="@+id/buttonLeaveStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#044cd0"
            android:minHeight="64dp"
            android:text="Leave Status" />

        <Button
            android:id="@+id/buttonLeaveBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#044cd0"
            android:minHeight="64dp"
            android:text="Leave Balance" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
